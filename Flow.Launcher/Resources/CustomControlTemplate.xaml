                                    VerticalAlignment="Center"
                                    Data="{DynamicResource NavigationViewItemExpandedPath}"
                                    FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                    FontSize="{DynamicResource NavigationViewItemExpandedGlyphFontSize}"
