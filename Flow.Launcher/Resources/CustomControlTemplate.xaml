                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Left">
                                    <Ellipse
                                        x:Name="SwitchKnobOn"
                                        Width="10"
                                        Height="10"
                                        Fill="{DynamicResource ToggleSwitchKnobFillOn}"
                                        Opacity="0" />
                                    <Ellipse
                                        x:Name="SwitchKnobOff"
                                        Width="10"
                                        Height="10"
                                        Fill="{DynamicResource ToggleSwitchKnobFillOff}" />
