                                    Storyboard.TargetName="ExpandCollapseChevronRotateTransform"
                                    Storyboard.TargetProperty="Angle"
                                    From="180.0"
                                    To="0.0"
                                    Duration="0:0:0.1" />
                            </Storyboard>
                        </Grid.Resources>
                        <Rectangle
                            x:Name="PointerRectangle"
