<ui:Page
    x:Class="Flow.Launcher.Resources.Pages.WelcomePageUserType"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Flow.Launcher.Resources.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="WelcomePageUserType"
    mc:Ignorable="d">
    <ui:Page.Resources>
        <Style x:Key="StyleImageFadeIn" TargetType="{x:Type Image}">
            <Setter Property="Opacity" Value="0" />
            <Style.Triggers>
                <!--  Fades-in the image when it becomes visible  -->
                <Trigger Property="IsVisible" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <BeginStoryboard.Storyboard>
                                <Storyboard x:Name="FadeIn">
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="Opacity"
                                        To="1"
                                        Duration="0:0:2" />
                                </Storyboard>
                            </BeginStoryboard.Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </ui:Page.Resources>
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>


            <StackPanel Grid.Row="1" Margin="24 20 24 20">
                <StackPanel>
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Pick your fighting style" />
                    <TextBlock
                        Margin="0 10 0 10"
                        FontSize="14"
                        Text="Based on your selected style, the CH(Cheap Human) will customize the initial settings for you"
                        TextWrapping="Wrap" />
                    <RadioButton
                        Height="150"
                        Margin="0 5 0 0"
                        HorizontalAlignment="Stretch">
                        <RadioButton.Template>
                            <ControlTemplate TargetType="RadioButton">
                                <Border
                                    Padding="10"
                                    BorderBrush="Black"
                                    BorderThickness="2"
                                    CornerRadius="10">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image
                                            Width="50"
                                            Height="50"
                                            HorizontalAlignment="Center"
                                            Source="your_image.png" />
                                        <TextBlock FontSize="18" Text="GUI Style" />
                                        <TextBlock FontSize="13" Text="Recommended for users familiar with the Windows operating style." />
                                        <TextBlock FontSize="13" Text="TAB is used as the key to switch between selectable options." />
                                        <TextBlock FontSize="13" Text="Pressing Enter will open the folder." />
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </RadioButton.Template>
                    </RadioButton>
                    <RadioButton
                        Height="150"
                        Margin="0 10 0 0"
                        HorizontalAlignment="Stretch">
                        <RadioButton.Template>
                            <ControlTemplate TargetType="RadioButton">
                                <Border
                                    Padding="10"
                                    BorderBrush="Black"
                                    BorderThickness="2"
                                    CornerRadius="10">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image
                                            Width="50"
                                            Height="50"
                                            HorizontalAlignment="Center"
                                            Source="your_image.png" />
                                        <TextBlock FontSize="18" Text="CLI Style" />
                                        <TextBlock FontSize="13" Text="Recommended for users familiar with the CLI or Terminal environment." />
                                        <TextBlock FontSize="13" Text="TAB is used as the key to Auto Complete" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="13"
                                            Text="When you open a folder with Enter, it will be displayed inside Flow." />
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </RadioButton.Template>
                    </RadioButton>
                </StackPanel>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</ui:Page>
