<ui:Page
    x:Class="Flow.Launcher.Resources.Pages.WelcomePageUserType"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Flow.Launcher.Resources.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="WelcomePageUserType"
    Height="540"
    mc:Ignorable="d">
    <ui:Page.Resources>
        <Style x:Key="RadioCardStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border
                            x:Name="CardBorder"
                            Padding="20"
                            Background="{DynamicResource Color01B}"
                            BorderBrush="{DynamicResource Color03B}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                    <!--  아이콘  -->
                                    <TextBlock
                                        x:Name="IconText"
                                        Margin="0 0 8 0"
                                        VerticalAlignment="Center"
                                        FontFamily="/Resources/#Segoe Fluent Icons"
                                        FontSize="24"
                                        Text="{Binding Tag.Icon, RelativeSource={RelativeSource TemplatedParent}}" />

                                    <!--  제목  -->
                                    <TextBlock
                                        x:Name="TitleText"
                                        Margin="0 0 0 2"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="{TemplateBinding Content}" />
                                </StackPanel>

                                <!--  설명  -->
                                <StackPanel>
                                    <TextBlock
                                        x:Name="Desc"
                                        Margin="0 8 0 0"
                                        FontSize="14"
                                        Text="{Binding Tag.Description1, RelativeSource={RelativeSource TemplatedParent}}"
                                        TextWrapping="Wrap" />

                                    <TextBlock
                                        x:Name="SubText1"
                                        Margin="12 12 0 0"
                                        FontSize="14"
                                        TextWrapping="Wrap">
                                        <Run FontWeight="Bold" Text="• " />
                                        <Run Text="{Binding Tag.Bullet1, RelativeSource={RelativeSource TemplatedParent}}" />
                                    </TextBlock>

                                    <TextBlock
                                        x:Name="SubText2"
                                        Margin="12 4 0 0"
                                        FontSize="14"
                                        TextWrapping="Wrap">
                                        <Run FontWeight="Bold" Text="• " />
                                        <Run Text="{Binding Tag.Bullet2, RelativeSource={RelativeSource TemplatedParent}}" />
                                    </TextBlock>


                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CardBorder" Property="Background" Value="{DynamicResource BasicSystemAccentColor}" />
                                <Setter TargetName="TitleText" Property="Foreground" Value="White" />
                                <Setter TargetName="IconText" Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="TitleText" Property="Foreground" Value="{DynamicResource Color05B}" />
                                <Setter TargetName="IconText" Property="Foreground" Value="{DynamicResource Color05B}" />
                                <Setter TargetName="Desc" Property="Foreground" Value="{DynamicResource Color05B}" />
                                <Setter TargetName="SubText1" Property="Foreground" Value="{DynamicResource Color04B}" />
                                <Setter TargetName="SubText2" Property="Foreground" Value="{DynamicResource Color04B}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="#3399FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ui:Page.Resources>
    <Grid Margin="24 20 24 20" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock
                FontSize="20"
                FontWeight="SemiBold"
                Text="Pick your style" />
            <TextBlock
                Margin="0 10 0 15"
                FontSize="14"
                Text="Based on your selected style, Flow will customize the initial settings for you. This setting can be changed later."
                TextWrapping="Wrap" />
        </StackPanel>
        <ScrollViewer Grid.Row="1" VerticalAlignment="Top">
            <StackPanel>
                <!--  CLI Style 카드 (기본 선택됨)  -->
                <RadioButton
                    Content="CLI Friendly"
                    GroupName="UserTypeGroup"
                    IsChecked="True"
                    Style="{StaticResource RadioCardStyle}">
                    <RadioButton.Tag>
                        <local:RadioCardData
                            Bullet1="TAB is used as the key to Auto Complete."
                            Bullet2="Pressing Enter will open the path in Flow."
                            Description1="Recommended for users familiar with the CLI or Terminal environment."
                            Icon="&#xE756;" />
                    </RadioButton.Tag>
                </RadioButton>

                <RadioButton
                    Margin="0 12 0 0"
                    Content="Windows Friendly"
                    GroupName="UserTypeGroup"
                    Style="{StaticResource RadioCardStyle}">
                    <RadioButton.Tag>
                        <local:RadioCardData
                            Bullet1="TAB is used as the key to switch between selectable options. Autocomplete will be ALT+RIGHT"
                            Bullet2="Pressing Enter will open the folder."
                            Description1="Recommended for users familiar with the Windows operating style."
                            Icon="&#xE961;" />
                    </RadioButton.Tag>
                </RadioButton>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:Page>
