    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" HorizontalAlignment="Stretch">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0 0" EndPoint="1 1">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Offset="0.0" Color="#16af7b" />
                            <GradientStop Offset="1.0" Color="#34c191" />
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Image
                        Width="300"
                        Height="100"
                        Margin="0,0,0,0"
                        Source="/Images/page_img01.png" />
                </StackPanel>
            </Border>

            <ScrollViewer
                Grid.Row="1"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <Grid>
                    <StackPanel Margin="24,20,24,20">
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock
                                FontSize="20"
                                FontWeight="SemiBold"
                                Text="{DynamicResource Welcome_Page3_Title}" />
                        </StackPanel>
                        <Border>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel
                                    Width="210"
                                    Margin="20,5,4,5"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Border Margin="0,0,5,0">
                                        <TextBlock>←</TextBlock>
                                    </Border>
                                    <TextBlock VerticalAlignment="Center">,</TextBlock>
                                    <Border Margin="5,0,0,0">
                                        <TextBlock>→</TextBlock>
                                    </Border>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Text="{DynamicResource HotkeyUpDownDesc}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel
                                    Width="210"
                                    Margin="20,5,4,5"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Border Margin="0,0,5,0">
                                        <TextBlock>↑</TextBlock>
                                    </Border>
                                    <TextBlock VerticalAlignment="Center">,</TextBlock>
                                    <Border Margin="5,0,0,0">
                                        <TextBlock>↓</TextBlock>
                                    </Border>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Text="{DynamicResource HotkeyLeftRightDesc}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel
                                    Width="210"
                                    Margin="20,5,4,5"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Border Margin="0,0,5,0">
                                        <TextBlock>Enter</TextBlock>
                                    </Border>

                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Text="{DynamicResource HotkeyRunDesc}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel
                                    Width="210"
                                    Margin="20,5,4,5"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Border Margin="0,0,5,0">
                                        <TextBlock Text="ESC" />
                                    </Border>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Text="{DynamicResource HotkeyESCDesc}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel
                                    Width="210"
                                    Margin="20,5,4,5"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Border Margin="0,0,5,0">
                                        <TextBlock Text="Tab" />
                                    </Border>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Text="{DynamicResource HotkeyTabDesc}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel
                                    Width="210"
                                    Margin="20,5,4,5"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Border Margin="0,0,5,0">
                                        <TextBlock Text="Shift" />
                                    </Border>
                                    <TextBlock VerticalAlignment="Center">+</TextBlock>
                                    <Border Margin="5,0,5,0">
                                        <TextBlock Text="ENTER" />
                                    </Border>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Text="{DynamicResource HotkeyShiftEnterDesc}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel
                                    Width="210"
                                    Margin="20,5,4,5"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Border Margin="0,0,5,0">
                                        <TextBlock Text="Ctrl" />
                                    </Border>
                                    <TextBlock VerticalAlignment="Center">+</TextBlock>
                                    <Border Margin="5,0,5,0">
                                        <TextBlock Text="ENTER" />
                                    </Border>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Text="{DynamicResource HotkeyCtrlEnterDesc}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel
                                    Width="210"
                                    Margin="20,5,4,5"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Border Margin="0,0,5,0">
                                        <TextBlock Text="Ctrl" />
                                    </Border>
                                    <TextBlock VerticalAlignment="Center">+</TextBlock>
                                    <Border Margin="5,0,5,0">
                                        <TextBlock Text="Shift" />
                                    </Border>
                                    <TextBlock VerticalAlignment="Center">+</TextBlock>
                                    <Border Margin="5,0,5,0">
                                        <TextBlock Text="ENTER" />
                                    </Border>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Text="{DynamicResource HotkeyCtrlShiftEnterDesc}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel
                                    Width="210"
                                    Margin="20,5,4,5"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Border Margin="0,0,5,0">
                                        <TextBlock Text="Ctrl" />
                                    </Border>
                                    <TextBlock VerticalAlignment="Center">+</TextBlock>
                                    <Border Margin="5,0,5,0">
                                        <TextBlock Text="H" />
                                    </Border>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Text="{DynamicResource HotkeyCtrlHDesc}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel
                                    Width="210"
                                    Margin="20,5,4,5"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Border Margin="0,0,5,0">
                                        <TextBlock Text="Ctrl" />
                                    </Border>
                                    <TextBlock VerticalAlignment="Center">+</TextBlock>
                                    <Border Margin="5,0,5,0">
                                        <TextBlock Text="I" />
                                    </Border>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Text="{DynamicResource HotkeyCtrlIDesc}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel
                                    Width="210"
                                    Margin="20,5,4,5"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Border Margin="0,0,5,0">
                                        <TextBlock Text="F5" />
                                    </Border>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Text="{DynamicResource HotkeyF5Desc}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

        </Grid>
    </ScrollViewer>
</UserControl>